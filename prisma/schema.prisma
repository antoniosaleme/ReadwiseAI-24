generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GeneratedText {
  id               Int      @id @default(autoincrement())
  topic            String
  slug             String
  levelB2          String
  levelC2          String
  difficultWordsB2 Json[]
  difficultWordsC2 Json[]
  audioB2Url       String
  audioC2Url       String
  language         String
  date             DateTime @default(now())

  @@index([topic, date])
}

model Topic {
  id   Int    @id @default(autoincrement())
  name String @unique
}
